# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_user_id_here
WEB_APP_URL=https://your-web-app-url.com

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Cloudflare R2 Storage (for image uploads)
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key_here
CLOUDFLARE_R2_BUCKET_NAME=blog-nextra-storage
# Public URL: Use Public Development URL (https://pub-xxxxx.r2.dev) for testing
# Or use custom domain (https://cdn.yourdomain.com) for production
CLOUDFLARE_R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# LLM Provider Selection (choose 'gemini' or 'openrouter')
LLM_PROVIDER=openrouter

# Google AI (Gemini) Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# OpenRouter Configuration (recommended for better performance/cost)
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Gemini 2.5 Flash: Best for classification tasks ($0.075/$0.30 per 1M tokens) - RECOMMENDED
# DeepSeek V3: Good value but slower performance ($0.27/$1.10 per 1M tokens)
# Claude 3.5 Haiku: Best for coding ($1.00/$5.00 per 1M tokens)
OPENROUTER_MODEL=google/gemini-2.5-flash
OPENROUTER_FALLBACK_TO_GEMINI=true  # Fallback to Gemini if OpenRouter fails (requires GOOGLE_AI_API_KEY)

# LLM Classification Settings
LLM_CLASSIFICATION_ENABLED=true

# Classification Thresholds (0-100 scoring system)
LLM_AUTO_CONFIRM_THRESHOLD=95  # Auto-tag categories with score â‰¥95 (no user confirmation needed)
LLM_SHOW_BUTTON_THRESHOLD=60   # Show category button for scores 60-94 (user must confirm)

# Legacy threshold (deprecated, will be removed in future)
LLM_CONFIDENCE_THRESHOLD=0.6

# Japanese Category
LLM_JAPANESE_CATEGORY_ENABLED=true

# Development
NODE_ENV=development
