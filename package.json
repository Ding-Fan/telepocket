{
  "name": "telepocket",
  "version": "1.0.0",
  "description": "A personal Telegram bot that automatically captures links from your messages",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx ts-node src/index.ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:unit": "npx jest tests/unit",
    "test:integration": "npx jest tests/integration"
  },
  "packageManager": "pnpm@8.0.0",
  "keywords": [
    "telegram",
    "bot",
    "link",
    "archival",
    "supabase"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "grammy": "^1.19.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
