# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_user_id_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Cloudflare R2 Storage (for image uploads)
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key_here
CLOUDFLARE_R2_BUCKET_NAME=blog-nextra-storage
# Public URL: Use Public Development URL (https://pub-xxxxx.r2.dev) for testing
# Or use custom domain (https://cdn.yourdomain.com) for production
CLOUDFLARE_R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Development
NODE_ENV=development
